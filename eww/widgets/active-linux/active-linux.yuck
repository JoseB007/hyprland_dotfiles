(defwindow activate-linux
	:namespace "activate-linux"
  :monitor 0
  :stacking "bg"
  :geometry (geometry :anchor "bottom right"
    :x "2%"
    :y "2%"
  )
  (box :space-evenly false
    (activate)
  )
)


(defwidget activate []
	(box
		:orientation "v"
		:space-evenly false
	  (label :xalign 0 :class "act-h" :text "Activate Linux")
	  (label :xalign 0 :class "act-t" :text "Go to Settings to activate Linux")
	)
)
